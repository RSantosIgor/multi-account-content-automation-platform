NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Supabase — get from https://supabase.com/dashboard/project/<ref>/settings/api
SUPABASE_URL=https://<project-ref>.supabase.co
SUPABASE_SERVICE_ROLE_KEY=<service_role_key>

# Generate with: node -e "require('crypto').randomBytes(32).toString('hex')"
ENCRYPTION_KEY=<64_hex_chars>

# X Developer App — https://developer.twitter.com/en/portal/dashboard
X_CLIENT_ID=<oauth2_client_id>
X_CLIENT_SECRET=<oauth2_client_secret>
X_CALLBACK_URL=http://localhost:3001/api/v1/x/oauth/callback

# AI Provider — set to 'openai' or 'anthropic'
AI_PROVIDER=openai
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Cron — random secret used to trigger scraping via HTTP
CRON_SECRET=<random_string>
